<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.feria.UptContacto">

    <ScrollView
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/TextView"
                android:text="Nombre"/>
            <EditText
                android:id="@+id/edtDatosNombre"
                android:enabled="false"
                style="@style/EditText" />

            <TextView
                style="@style/TextView"
                android:text="Cargo"/>
            <EditText
                android:id="@+id/edtDatosCargo"
                android:enabled="false"
                style="@style/EditText" />

            <TextView
                style="@style/TextView"
                android:text="Empresa"/>
            <EditText
                android:id="@+id/edtDatosEmpresa"
                android:enabled="false"
                style="@style/EditText" />

            <TextView
                style="@style/TextView"
                android:text="Ciudad"/>
            <EditText
                android:id="@+id/edtDatosCiudad"
                android:enabled="false"
                style="@style/EditText" />

            <TextView
                style="@style/TextView"
                android:text="Telefono"/>
            <EditText
                android:id="@+id/edtDatosTelefono"
                android:enabled="false"
                style="@style/EditText" />

            <TextView
                style="@style/TextView"
                android:text="Correo"/>
            <EditText
                android:id="@+id/edtDatosCorreo"
                android:enabled="false"
                style="@style/EditText" />

            <TextView
                style="@style/TextView"
                android:text="Interes"/>
            <EditText
                android:id="@+id/edtDatosInteres"
                android:enabled="false"
                style="@style/EditText" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
